@model InventoryManager.Data.Recipe_Ingredient

@{
    Layout = Layout = "~/Views/Shared/_embed.cshtml";
}

@*<h1>Create</h1>*@

<h4>Add New Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label"></label>
                <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId">
                    <option selected>@TempData["Recipe"]</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="IngredientId" class="control-label"></label>
                <select asp-for="IngredientId" class ="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="QuantityMeasure" class="control-label"></label>
                <input asp-for="QuantityMeasure" class="form-control" />
                <span asp-validation-for="QuantityMeasure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
